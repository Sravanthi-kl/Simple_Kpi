<div>
  <h4>
    <%= link_to  new_business_path, :class => [:btn, :"btn-success"] do |l|%>
      <i class="icon-plus-sign icon-white"></i>
      Add New Branch
    <% end %>
  </h4>

  <table class="table table-striped table-bordered">
    <thead>
      <th>Branch Name</th>          
      <th>City</th>
      <th>Contact Numbers</th>      
    </thead>

    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.branchname %></td>               
        <td><%= business.city %></td>
        <td><%= business.contactnumbers%></td>               
        <td><%= link_to 'Show', business %> 
            <%= link_to 'Edit', edit_business_path(business) %>
            <%= link_to 'Destroy',business, method: :delete, data: {confirm: 'Are you sure?'} %> 
            <%= link_to 'AddKPIData',dataEntry_bkdetails_path(:business_id => business.id),:class=>["btn","btn-default"] %>
            <%=link_to 'Feed',dataFeed_bkdetails_path(:business_id => business.id),:class => [:btn, :"btn-success"]%>
            <%=link_to 'LinkKpi',businesslinkkpi_businesses_path(:bus_id => business.id),:class => [:btn, :"btn-success"]%>   

        </td>    
      </tr>
    <% end %>
  </table>
  <br />
</div>
